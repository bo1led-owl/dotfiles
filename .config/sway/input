input type:keyboard {
	xkb_layout us,ru
	xkb_options grp:alt_shift_toggle
	xkb_numlock enabled
}

focus_follows_mouse no

# Hide cursor after 15 seconds
seat * hide_cursor 15000

input type:pointer {
	accel_profile flat
	pointer_accel 0
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
	scroll_factor 0.25
	pointer_accel 0.1
}

# Mod4 is logo (Windows) button
set $mod Mod4

set $left h
set $right l
set $up k
set $down j
